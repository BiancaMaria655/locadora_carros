      <div class="col-auto">
        
        <input type="text" value="" name="id" id="updateFormId" hidden>
        <input type="submit" value="Cadastrar" class="form-control btn btn-primary" id="createFormCar">
        <input type="submit" value="Atualizar" class="form-control btn btn-success" id="updateFormCar" hidden>
        
      </div>
      <div class="col-auto">
        
        <a onclick="cancelButtonCar()" type="submit" value="Salvar" class="form-control btn btn-danger " id="cancelUpdateCar" hidden>Cancelar</a>
      </div>
    </div>

