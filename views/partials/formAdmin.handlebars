<form action="/admin/adicionar" method="POST" id="formAdmin" class="p-2 border rounded">
    <h2 id="formH2">Cadastro de Admin</h2>
    <div class="row gy-2 gx-3 align-items-center">
      <div class="mb-3 col-4">
        <label for="name" class="form-label">Nome</label>
        <input type="text" name="name" class="form-control" id="formName" required>
        
      </div>
      <div class="mb-3 col-auto">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" class="form-control" id="formEmail" required>
        
      </div>
      <div class="mb-3 col-auto">
        <label for="password" class="form-label">Senha</label>
        <input type="password" name="password" class="form-control" id="formPass" required>
      </div>
      <div class="mb-3 col-auto">
        <label for="cpf" class="form-label">CPF</label>
        <input type="text" name="cpf" class="form-control" id="formCpf" required>
      </div>
      <div class="mb-3 col-auto">
        <label for="user_type" class="form-label">Tipo</label>
        <input type="text" name="user_type" class="form-control" id="formType" required>
      </div>
      
    </div>
    <div class="row">
      <div class="col-auto">
        
        <input type="text" value="" name="id" id="updateFormId" hidden>
        <input type="submit" value="Cadastrar" class="form-control btn btn-primary" id="createForm">
        <input type="submit" value="Atualizar" class="form-control btn btn-success" id="updateForm" hidden>
        
      </div>
      <div class="col-auto">
        
        <a onclick="cancelButton()" type="submit" value="Salvar" class="form-control btn btn-danger" id="cancelUpdate" hidden>Cancelar</a>
      </div>
    </div>

</form>
  