<div class="title">
    <h3>Cadastre-se</h3>
</div>

<div class="div-user">
  <form class="row g-3 form-user" action="/cliente/cadastro" method="post" name="form1">
    <div class="col-12">
      <input type="hidden" name="user_type" value="CLIENT">
      <label for="name" class="form-label">Nome completo</label>
      <input type="text" class="form-control" name="name" placeholder="" required>
    </div>
    <div class="col-md-6">
      <div id="div_cpf">
        <label for="cpf" class="form-label">CPF</label>
        <div id="msgcpf"></div>
      </div>
      <input type="text" onkeypress="$(this).mask('000.000.000-00');" class="form-control" name="cpf" id="cpf" onchange="validarCPF(this)"  required>
    </div>
    <div class="col-md-6">
      <div id="div_cnh">
        <label for="cnh" class="form-label">CNH</label>
        <div id="msgcnh"></div>
      </div>
      <input type="text" onkeypress="$(this).mask('00000000000')" class="form-control" name="cnh" id="cnh" onchange="validarCNH(this)" required>
    </div>
    <div class="col-12">
      <label for="address" class="form-label">Endere√ßo completo</label>
      <input type="text" class="form-control" name="address" required>
    </div>
    <div class="col-md-6">
      <label for="phone" class="form-label">Telefone</label>
      <input type="tel" onkeypress="$(this).mask('(00) 00000-0000')" class="form-control" name="phone" required>
    </div>
    <div class="col-md-6">
      <div id="div_email">
        <label for="email" class="form-label">Email</label>
        <div id="msgemail"></div>
      </div>
      <input type="email" class="form-control" name="email" required onchange="validateEmail(form1.email)">
    </div>
    <div class="col-md-6">
      <label for="password" class="form-label">Senha</label>
      <input type="password" class="form-control" name="password" id="password" required onchange="validatePassword()">
    </div>
    <div class="col-md-6">
      <label for="confirmPassword" class="form-label">Confirmar senha</label>
      <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" required onchange="validatePassword()">
    </div>
    
    <div class="col-12 text-end">
      <button type="submit" class="btn btn-primary btn-yellow" id="btn_cadastrar">Cadastrar</button>
    </div>
  </form>
</div>
