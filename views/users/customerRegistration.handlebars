<form class="row g-3" action="/cliente/cadastro" method="post">
  <div class="col-12">
    <input type="hidden" name="user_type" value="CLIENT">
    <label for="name" class="form-label">Nome completo</label>
    <input type="text" class="form-control" name="name" placeholder="">
  </div>
  <div class="col-md-6">
    <label for="cpf" class="form-label">CPF</label>
    <input type="text" class="form-control" name="cpf">
  </div>
  <div class="col-md-6">
    <label for="cnh" class="form-label">CNH</label>
    <input type="text" class="form-control" name="cnh">
  </div>
  <div class="col-12">
    <label for="address" class="form-label">Endere√ßo completo</label>
    <input type="text" class="form-control" name="address" placeholder="">
  </div>
  <div class="col-md-6">
    <label for="phone" class="form-label">Telefone</label>
    <input type="tel" class="form-control" name="phone" pattern="[0-9]{2}-[0-9]{5}-[0-9]{4}">
  </div>
  <div class="col-md-6">
    <label for="email" class="form-label">Email</label>
    <input type="email" class="form-control" name="email">
  </div>
  <div class="col-md-6">
    <label for="password" class="form-label">Senha</label>
    <input type="password" class="form-control" name="password">
  </div>
  
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Sign in</button>
  </div>
</form>