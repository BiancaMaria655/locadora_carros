<div class="title">
    <h3>Todas as locações realizadas</h3>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nome Locatario</th>
      <th scope="col">Veiculo</th>
      <th scope="col">Data de Inicio da Locação</th>
      <th scope="col">Data Final da Locação</th>
      <th scope="col">Valor Total da Locação</th>
      <th scope="col">Status Locação</th>
    </tr>
  </thead>
  <tbody>
    {{#each loc}}
    <tr>      
      <td>{{this.nome}}</td>
      <td>{{this.veiculo}}</td>
      <td>{{this.dataIn}}</td>
      <td>{{this.dataFim}}</td>
      <td>{{this.valor}}</td>
      <td>{{this.status}}</td>
      <td>
        <div class="col-md-4 actions">
        <a href="/locacao/editarAdm/{{this.id}}">Editar</a>
        <form action="/locacao/remover" method="post">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit" class="btn-delete">Remover</button>
        </form>
        </div>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>